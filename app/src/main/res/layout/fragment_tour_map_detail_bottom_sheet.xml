<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/rectangle_fill_white_border_r20">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_tour_detail_bottom_sheet_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/tourImgRound"
        tools:src="@drawable/ic_app" />

    <TextView
        android:id="@+id/tv_tour_detail_bottom_sheet_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@{place.placeName}"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_tour_detail_bottom_sheet_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="일이삼사오육칠팔구십" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_tour_detail_bottom_sheet_like"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:tint="@color/gray_500"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/tv_tour_detail_bottom_sheet_like_count"
        app:layout_constraintStart_toStartOf="@id/tv_tour_detail_bottom_sheet_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_tour_detail_bottom_sheet_address"
        app:srcCompat="@drawable/ic_like" />

    <TextView
        android:id="@+id/tv_tour_detail_bottom_sheet_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tour_detail_bottom_sheet_like"
        app:layout_constraintStart_toStartOf="@+id/tv_tour_detail_bottom_sheet_address"
        app:layout_constraintTop_toTopOf="@+id/iv_tour_detail_bottom_sheet_like"
        tools:text="3" />

    <TextView
        android:id="@+id/tv_tour_detail_bottom_sheet_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/tv_tour_detail_bottom_sheet_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_tour_detail_bottom_sheet_name"
        tools:text="서울시 종로구 123 123" />

</androidx.constraintlayout.widget.ConstraintLayout>
